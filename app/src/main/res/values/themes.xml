<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.MaterialNasa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.MaterialNasa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="chipStrokeColorChecked">@color/chip_selected</item>
        <item name="chipStrokeColorUnchecked">@color/chip_unselected</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="fontFamily">@font/droid_sans</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="primaryFontColor">@color/grey</item>

    </style>

    <style name="Theme.MaterialNasa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MaterialNasa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Splash" parent="Theme.MaterialNasa">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>
</resources>